<query xmlns="http://labkey.org/data/xml/query">
    <metadata>
        <tables xmlns="http://labkey.org/data/xml">
            <table tableName="demographicsActiveTreatmentsGiven" tableDbType="NOT_IN_DB">
                <tableTitle>Active Treatments Given</tableTitle>
                <columns>
                    <column columnName="Id">
                        <isHidden>true</isHidden>
                        <isKeyField>true</isKeyField>
                    </column>


                    <column columnName="totalTreatmentsGiven">
                        <columnTitle># Active Treatments Given</columnTitle>
                        <url>/query/executeQuery.view?schemaName=study&amp;query.queryName=DrugsActive&amp;query.Id~eq=${Id}&amp;query.sort=-date</url>
                    </column>
                    <column columnName="totalBehaviorTreatmentsGiven">
                        <columnTitle># Active Behavior Treatments Given</columnTitle>
                        <url>/query/executeQuery.view?schemaName=study&amp;query.queryName=DrugsActive&amp;query.Id~eq=${Id}&amp;query.category~eq=Behavior&amp;query.sort=-date</url>
                    </column>
                    <column columnName="totalClinicalTreatmentsGiven">
                        <columnTitle># Active Clinical Treatments Given</columnTitle>
                        <url>/query/executeQuery.view?schemaName=study&amp;query.queryName=DrugsActive&amp;query.Id~eq=${Id}&amp;query.category~eq=Clinical&amp;query.sort=-date</url>
                    </column>
                    <column columnName="totalSurgicalTreatmentsGiven">
                        <columnTitle># Active Surgical Treatments Given</columnTitle>
                        <url>/query/executeQuery.view?schemaName=study&amp;query.queryName=DrugsActive&amp;query.Id~eq=${Id}&amp;query.category~eq=Surgical&amp;query.sort=-date</url>
                    </column>


                </columns>
            </table>
        </tables>
    </metadata>
</query>
