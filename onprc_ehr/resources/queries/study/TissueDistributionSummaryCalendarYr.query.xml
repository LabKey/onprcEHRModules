<query xmlns="http://labkey.org/data/xml/query">
    <metadata>
        <tables xmlns="http://labkey.org/data/xml">
            <table tableName="tissueDistributionSummary" tableDbType="TABLE">
                <tableTitle>Tissue Distribution Summary</tableTitle>
                <columns>
                    <column columnName="totalSamples">
                        <columnTitle>Total Samples</columnTitle>
                        <url>/query/executeQuery.view?
                            schemaName=study&amp;
                            query.queryName=Tissue Distributions&amp;
                            query.calendarYear~eq=${calendarYear}&amp;
                            query.requestCategory~eq=${requestCategory}&amp;
                            query.QCState/Label~in=Completed;Request: Pending&amp;
                        </url>
                    </column>
                </columns>
            </table>
        </tables>
    </metadata>
</query>