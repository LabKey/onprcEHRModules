<query xmlns="http://labkey.org/data/xml/query">
    <metadata>
        <tables xmlns="http://labkey.org/data/xml">
            <table tableName="demographicsAssignmentHistory" tableDbType="NOT_IN_DB">
                <tableTitle>All Assignments</tableTitle>
                <columns>
                    <column columnName="Id">
                        <isHidden>true</isHidden>
                    </column>
                    <column columnName="totalProjects">
                        <facetingBehavior>ALWAYS_OFF</facetingBehavior>
                        <columnTitle>Total Projects</columnTitle>
                        <url>/query/executeQuery.view?schemaName=study&amp;query.queryName=Assignment&amp;query.id~eq=${id}</url>
                    </column>
                    <column columnName="numAssignments">
                        <facetingBehavior>ALWAYS_OFF</facetingBehavior>
                        <columnTitle># Assignments</columnTitle>
                        <url>/query/executeQuery.view?schemaName=study&amp;query.queryName=Assignment&amp;query.id~eq=${id}</url>
                    </column>
                </columns>
            </table>
        </tables>
    </metadata>
</query>
