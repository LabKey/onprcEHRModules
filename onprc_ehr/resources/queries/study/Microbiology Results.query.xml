<query xmlns="http://labkey.org/data/xml/query">
    <metadata>
        <tables xmlns="http://labkey.org/data/xml">
            <table tableName="microbiology" tableDbType="TABLE" useColumnOrder="true">
                <tableTitle>Microbiology Results</tableTitle>
                <tableUrl />
                <columns>
                    <column columnName="Id"/>
                    <column columnName="date"/>
                    <column columnName="servicerequest">
                         <columnTitle>Service Request</columnTitle>
                    </column>
                    <column columnName="enddate">
                        <isHidden>true</isHidden>
                    </column>
                    <column columnName="project">
                        <isHidden>true</isHidden>
                    </column>
                    <column columnName="tissue">
                        <columnTitle>Tissue</columnTitle>
                        <fk>
                            <fkDbSchema>ehr_lookups</fkDbSchema>
                            <fkTable>snomed</fkTable>
                            <fkColumnName>code</fkColumnName>
                        </fk>
                    </column>
                    <column columnName="organism">
                        <columnTitle>Organism</columnTitle>
                        <fk>
                            <fkDbSchema>ehr_lookups</fkDbSchema>
                            <fkTable>snomed</fkTable>
                            <fkColumnName>code</fkColumnName>
                        </fk>
                    </column>
                    <column columnName="quantity">
                        <columnTitle>Quantity</columnTitle>
                        <fk>
                            <fkDbSchema>ehr_lookups</fkDbSchema>
                            <fkTable>microbiologyQuantity</fkTable>
                            <fkColumnName>value</fkColumnName>
                        </fk>
                    </column>
                    <column columnName="result">
                        <columnTitle>Result</columnTitle>
                    </column>
                    <column columnName="units">
                        <columnTitle>Units</columnTitle>
                    </column>
                    <column columnName="qualresult">
                        <columnTitle>Qualitative Result</columnTitle>
                    </column>
                    <column columnName="method">
                        <columnTitle>Method</columnTitle>
                    </column>
                    <column columnName="lsid">
                        <isHidden>true</isHidden>
                    </column>
                </columns>
            </table>
        </tables>
    </metadata>
</query>