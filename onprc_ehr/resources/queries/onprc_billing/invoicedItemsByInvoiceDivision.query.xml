<query xmlns="http://labkey.org/data/xml/query">
    <metadata>
        <tables xmlns="http://labkey.org/data/xml">
            <table tableName="invoicedItemsByInvoiceDivision" tableDbType="TABLE">
                <tableTitle>Items By Invoice and Division</tableTitle>
                <columns>
                    <column columnName="numItems">
                        <columnTitle># Items</columnTitle>
                        <url>/query/executeQuery.view?schemaName=onprc_billing&amp;
                            queryName=invoicedItemsByInvoiceDivisionItem&amp;
                            query.invoiceId/rowid~eq=${invoiceId/rowid}&amp;
                            query.division~eq=${division}
                        </url>
                    </column>
                    <column columnName="total">
                        <columnTitle>Total</columnTitle>
                        <formatString>$###,##0.00</formatString>
                    </column>
                </columns>
            </table>
        </tables>
    </metadata>
</query>