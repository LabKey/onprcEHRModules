  <metadata>
      <tables xmlns="http://labkey.org/data/xml">
          <table tableName="SSP_Summary" tableDbType="NOT_IN_DB">
              <tableTitle>SSP Summary</tableTitle>
              <columns>
                  <column columnName="subjectId">

                  </column>
                  <column columnName="primerPair">
