<query xmlns="http://labkey.org/data/xml/query">
    <metadata>
        <tables xmlns="http://labkey.org/data/xml">
            <table tableName="snpSummary" tableDbType="TABLE">
                <tableTitle>SNP Result Summary</tableTitle>
                <columns>
                    <column columnName="category">
                        <facetingBehavior>ALWAYS_OFF</facetingBehavior>
                    </column>
                    <column columnName="marker">
                        <facetingBehavior>ALWAYS_OFF</facetingBehavior>
                    </column>
                    <column columnName="alleles">
                        <facetingBehavior>ALWAYS_OFF</facetingBehavior>
                    </column>
                    <column columnName="totalResults">
                        <columnTitle>Total Results</columnTitle>
                        <url>/query/executeQuery.view?
                            schemaName=${schemaName}&amp;
                            query.queryName=Data&amp;
                            query.subjectId~eq=${subjectId}&amp;
                            query.marker~eq=${marker}&amp;
                            query.ref_nt_name~eq=${ref_nt_name}&amp;
                            query.position~eq=${position}
                        </url>
                    </column>
                </columns>
            </table>
        </tables>
    </metadata>
</query>
